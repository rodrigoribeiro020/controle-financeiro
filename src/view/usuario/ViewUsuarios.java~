    public void preencheLista(){
        try {
            usuarioController = new UsuarioController();
            Iterator it = usuarioController.toList().iterator();
            Usuario hs;
            
            while(it.hasNext()){
                hs = (Usuario) it.next();
                jComboBox1.addItem(hs.email);
            }          
            
        } catch (Exception e) {
        }
    }
    
    
    public void preencheTabela(){
        
        DefaultTableModel model = (DefaultTableModel) jTable2.getModel();        
        try {
            usuarioController = new UsuarioController();
            Iterator it = usuarioController.toList().iterator();
            Usuario hs;
            
            while(it.hasNext()){
                hs = (Usuario) it.next();
                model.addRow(new Object[]{hs.nome,hs.senha,hs.dicaSenha,hs.email});
            }          
            
        } catch (Exception e) {
        }
    }
}
