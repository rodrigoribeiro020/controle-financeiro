    private void jComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jComboBox1ActionPerformed
        
        try {
            javax.swing.JComboBox cb = (javax.swing.JComboBox)evt.getSource();
            String email = (String) cb.getSelectedItem();
            usuarioController = new UsuarioController();
            Usuario usuario = usuarioController.buscarUsuario(email);
            labelEmail.setText(usuario.email);
            labelNome.setText(usuario.nome);
            
        } catch (Exception e) {
            
        }
        
        
        
    }//GEN-LAST:event_jComboBox1ActionPerformed

    
    
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            usuarioController = new UsuarioController();
            Usuario usuario = usuarioController.buscarUsuario(labelEmail.getText());
            usuarioController.removerUsuario(usuario);
            JOptionPane.showMessageDialog(null, "Usuário removido com sucesso!");
            jComboBox1.removeAllItems();
            preencheLista();
            
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e.getMessage());
        }
    }//GEN-LAST:event_jButton1ActionPerformed



