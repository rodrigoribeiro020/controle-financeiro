    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed

        String mudada;
        CategoriaTransacao categoria = new CategoriaTransacao();
        CategoriaTransacaoController categoriaController;

        categoria.nome = jTextField2.getText();
        categoria.cor = jColorChooser1.getColor().getRGB();
        categoria.emailUsuario = MeuEscritorio.usuarioLogado.email;
        if (jTextFieldOrcamento.getText().equals("")) {
            categoria.orcamento = 0;
        } else {
            mudada = jTextFieldOrcamento.getText().replaceAll(",", ".");
            categoria.orcamento = Double.parseDouble(mudada);
        }

        try {
            categoriaController = new CategoriaTransacaoController();
            categoriaController.adicionar(categoria);
            JOptionPane.showMessageDialog(null, "Categoria cadastrada com sucesso");
            this.dispose();

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e.getMessage());
        }
    }//GEN-LAST:event_jButton1ActionPerformed

