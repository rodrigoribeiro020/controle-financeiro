    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {

        String mudada;
        CategoriaTransacao categoria = new CategoriaTransacao();
        CategoriaTransacaoController categoriaController;

        TransacaoController novaTransacaoController;
        Transacao transacao;

        categoria.nome = jTextFieldNome.getText();
        categoria.cor = jColorChooser1.getColor().getRGB();
        categoria.emailUsuario = MeuEscritorio.usuarioLogado.nome;
        if (!jTextFieldOrcamento.getText().equals("Erro!")) {
            categoria.orcamento = jTextFieldOrcamento.getDoubleValue();

            categoria.id = this.id;

            try {
                categoriaController = new CategoriaTransacaoController();
                categoriaController.atualizar(categoria, MeuEscritorio.usuarioLogado.email);

                novaTransacaoController = new TransacaoController();
                List transacoes = novaTransacaoController.toList(MeuEscritorio.usuarioLogado.email);
                Iterator it = transacoes.iterator();

                while (it.hasNext()) {
                    transacao = (Transacao) it.next();
                    if (transacao.categoria.equals(nomeAntigo)) {
                        transacao.categoria = jTextFieldNome.getText();
                    }
                    novaTransacaoController.atualizaTransacao(transacao);
                }

                JOptionPane.showMessageDialog(null, "Categoria atualizada com sucesso");
                Categorias categorias = new Categorias();
                MeuEscritorio.jDesktopPane1.add(categorias);
                categorias.setMaximum(true);
                categorias.setVisible(true);
                this.dispose();

            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e.getMessage());
            }
        }
    }

    public void preencheJanela() {
        CategoriaTransacaoController categoriaController;
        CategoriaTransacao categoria;
        try {
            categoriaController = new CategoriaTransacaoController();
            categoria = new CategoriaTransacao();

            categoria = categoriaController.buscaCategoria(this.id, MeuEscritorio.usuarioLogado.email);
            jTextFieldNome.setText(categoria.nome);
            jColorChooser1.setColor(categoria.cor);
            if (categoria.orcamento == 0) {
                jTextFieldOrcamento.setText("");
            } else {
                jTextFieldOrcamento.setText(String.valueOf(categoria.orcamento));
            }

        } catch (Exception e) {
        }

    }
    private DecimalFormattedField jTextFieldOrcamento;
